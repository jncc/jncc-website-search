                                        <%# current page not near start so show last page %>
                                        <li><a href="<%= getPaginationLink(queryParams, totalPages) %>"><%= totalPages %></a></li>
                                    <% } %>
                                <% } else { %>
                                    <%# show all pages without ellipsis %>
                                    <% for (i = 1; i <= totalPages; i++) { %>
                                        <% if (i === queryParams.pageStart) { %> 
